@page
@model WebAppTest.Pages.modificaModel
@{
}
@if (Model.errorMessage.Length > 0)
{
        <div class="alert-warning alert-dismissible fade show" role= 'alert'>
            <strong>@Model.errorMessage</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Chiudi"></button>
        </div>
}

@Model.dato.Nome <br />
@Model.dato.Cognome<br />
@Model.dato.DataNascita<br />
@Model.dato.Telefono <br />

<form method="post">
    <input type="hidden" name="id" value="@Model.dato.id" />

    <div class ="row mb-3">
        <label class="col-sm-3 col-form-label">Nome</label>
        <div>
            <input type="text" name="nome" value="@Model.dato.Nome"> 
        </div>
    </div>

    <div class ="row mb-3">
        <label class="col-sm-3 col-form-label">Cognome</label>
        <div>
            <input type="text" name="cognome" value="@Model.dato.Cognome"> 
        </div>
    </div>

    <div class ="row mb-3">
        <label class="col-sm-3 col-form-label">DataNascita</label>
        <div>
            <input type="text" name="datanascita" value="@Model.dato.DataNascita"> 
        </div>
    </div>

    <div class ="row mb-3">
        <label class="col-sm-3 col-form-label">Telefono</label>
        <div>
            <input type="text" name="telefono" value="@Model.dato.Telefono"> 
        </div>
    </div>

    <div>
        <div>
            <button type="submit" class="btn-primary">Modifica</button>
        </div>
        <div>
            <a href="test" class="btn bnt-outline-primary" role=button>Annulla</a>
        </div>
    </div>
</form>